# Variables de entorno para el proyecto (PLANTILLA)
# Copia este archivo como .env y completa los valores

# URL de la API (accesible desde el frontend)
PUBLIC_API_URL=http://localhost:5000/api

# Puerto para el servidor de desarrollo de Astro
PORT=5000

# Configuración de MongoDB
MONGODB_URI=mongodb://localhost:27017/portfolio

# Configuración de JWT
JWT_SECRET=tu_clave_secreta_aqui
JWT_EXPIRE=30d

# Configuración de correo (opcional)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=tu_email@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_app
EMAIL_FROM=tu_email@gmail.com

# Configuración de Cloudinary (opcional para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración del servidor
NODE_ENV=development 